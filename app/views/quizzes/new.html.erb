<nav class='breadcrumb is-centered is-large has-arrow-separator' aria-label='breadcrumbs'>
  <ul>
    <li>
      <%= link_to(root_path) do %>
        <span class='icon is-small' aria-current='page'>
          <i class='fa fa-home' aria-hidden='true'></i>
        </span>
        <span>Home</span>
      <% end %>
    </li>
    <li class='is-active'>
      <a href='#' aria-current='page'>
        <span class='icon is-small'>
          <i class='fa fa-pencil' aria-hidden='true'></i>
        </span>
        <span>New Quiz</span>
      </a>
    </li>
  </ul>
</nav>

<section class="section">
  <%= form_with model: @quiz do |f| %>
    <div class='field'>
      <%= f.label :name, class: 'label' %>
      <div class='control'>
        <%= f.text_field :name, class: 'input' %>
      </div>
    </div>

    <div class='field'>
      <%= f.label :description, class: 'label' %>
      <div class='control'>
        <%= f.text_area :description, class: 'textarea' %>
      </div>
    </div>


    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class='container'>
      <h2>Question</h2>
      <%= f.fields_for :questions do |question| %>
        <div class='field'>
          <%= question.label :text, class: 'label' %>
          <div class='control'>
            <%= question.text_field :text, class: 'input' %>
          </div>
        </div>

        <% 4.times do |i| %>
          <div class='container column is-half'>
            <h3>Answer <%= i + 1 %></h3>
            <%= question.fields_for :answers do |answer| %>
              <div class='field'>
                <%= answer.label :text, class: 'label' %>
                <div class='control'>
                  <%= answer.text_field :text, class: 'input' %>
                </div>
              </div>

              <div class='field'>
                <div class='control checkbox'>
                  <%= answer.check_box :is_true %>
                  <%= answer.label :is_true %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>


    <%#= render "add_question_form" %>

    <div class='field'>
      <%#= link_to 'Add Question', add_another_question_path, class: 'button is-primary is-fullwidth is-large is-outlined block' %>

      <%#= f.submit 'Add Question', class: 'button is-info is-fullwidth' %>
      <%#= link_to 'Create Quiz', root_path, class: 'button is-info is-fullwidth' %>

      <%= f.submit class: 'button is-info is-fullwidth' %>
    </div>
  <% end %>
</section>
