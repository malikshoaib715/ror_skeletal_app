<section class='section'>
  <%= link_to 'Choose Random Quiz', choose_random_path, class: 'button is-primary is-fullwidth is-large is-outlined block', method: :post %>

  <div class='columns is-multiline is-mobile'>
    <% quizzes.each do |quiz| %>
      <div class='card column is-half block'>
        <header class='card-header'>
          <%= link_to quiz.name, quiz_path(quiz.id),
              class: 'button is-info is-fullwidth is-large is-outlined' %>
        </header>
        <div class='card-content'>
          <p class='content'>
            <%= quiz.description %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</section>